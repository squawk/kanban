# Session Secret (REQUIRED in production)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here

# Admin Approval Secret (optional, defaults to SESSION_SECRET)
ADMIN_APPROVAL_SECRET=your_admin_approval_secret_here

# OpenAI API Key for AI prompt generation
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# SendGrid for email notifications
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Google reCAPTCHA (for signup spam prevention)
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Database Path (set by Fly.io volume in production)
# For local development, leave unset (uses ./data.db)
# DATABASE_PATH=/data/data.db
